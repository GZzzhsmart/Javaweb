<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	
	<constant name="struts.action.extension" value="action,,do" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.multipart.maxSize" value="20971520" />
	
	<package name="my-struts" extends="struts-default">
	
		<global-results>
			<result name="null">/error/ex.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="null" exception="java.lang.NullPointerException"></exception-mapping>
		</global-exception-mappings>
	
	</package>
	
	<package name="product-struts" extends="json-default" namespace="/product">
		<action name="*" class="com.gs.action.ProductAction" method="{1}">
			<result name="all" type="json"></result>
			<result name="query" type="json"></result>
			<result name="add" type="json"></result>
			<result name="update" type="json"></result>
			<result name="delete" type="json"></result>
		</action>
	</package>
	
</struts>